<section style="background-color: #eee;">

    <div class="container py-5">
        <div class="row">
            {{#each recommendCourses}}
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <img src="../../uploads/{{this.avatar}}" alt="avatar" class="rounded-circle img-fluid"
                            style="width: 150px;">
                        <h5 class="my-3"></h5>
                        <p class="text-muted mb-1">{{this.name}}</p>
                        <div class="d-flex justify-content-center mb-2">
                            <a href="/profile/information/{{this._id}}"
                                class="btn btn-primary information-a-home">Information</a>

                            {{#if check}}
                            <a href="/chat/{{this._id}}" class="btn btn-primary ml-6">Chat With
                                Yourself</a>
                            {{else}}
                            <a href="/chat/{{this._id}}" class="btn btn-primary ml-6">Chat</a>
                            {{/if}}
                        </div>
                    </div>
                    <div class="card mb-4 mb-lg-0">
                        <div class="card-body p-0">
                            <ul class="list-group list-group-flush rounded-3">
                                <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                    <a href="#"><i class="fa fa-email" style="font-size:23px;color:red"></i></a>
                                    <p class="mb-0">Kinh nghiem lam viec</p>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center p-3">


                                    <a href="#"><i class="fa fa-bell" style="font-size:23px;color:blue"></i></a>
                                    <p class="mb-0">{{this.current_skills}}</p>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                    <a href="#"><i class="fa fa-tasks" style=" font-size:23px;color:blue"></i></a>
                                    <p class="mb-0">1 năm giảng dạy tại trung tâm</p>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                    <a href="#"><i class="fa fa-briefcase" style="font-size:23px;color:blue"></i></a>
                                    <p class="mb-0">Thạc Sĩ Khoa Học Máy Tính HUMG</p>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                    <a href="#"><i class="fa fa-envelope" style="font-size:23px;color:red"></i></a>
                                    <p class="mb-0">{{this.email}}</p>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="d-flex flex-wrap"> <!-- Sử dụng d-flex và flex-wrap -->
                            {{#each this.courses}}
                            <div class="card" style="width: 18rem; margin-right: 1rem; margin-bottom: 1rem;">

                                <!-- Thêm margin để tạo khoảng cách giữa các thẻ -->
                                <img src="../../uploads/{{this.course_image}}" class="card-img-top" alt="...">


                                <div class="card-body">
                                    <a href="#" class="btn btn-primary information-a-home">{{this.course_name}}</a>

                                    <p class="card-text">{{this.description_course}}</p>
                                </div>
                            </div>
                            {{/each}}


                        </div>
                        <hr>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="card mb-4 mb-md-0">
                            <div class="card-body">
                                <p class="mb-4"><span class="text-primary font-italic me-1">Current Skill</span></p>
                                <p class="mb-1" style="font-size: .77rem;">{{this.current_skills}}</p>
                                <div class="progress rounded" style="height: 5px;">
                                    <div class="progress-bar" role="progressbar" style="width: 80%" aria-valuenow="80"
                                        aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card mb-4 mb-md-0">
                            <div class="card-body">
                                <p class="mb-4"><span class="text-primary font-italic me-1">Skill want to
                                        learn</span>
                                </p>
                                <p class="mb-1" style="font-size: .77rem;">{{this.skill_want_to_learn}}</p>
                                <div class="progress rounded" style="height: 5px;">
                                    <div class="progress-bar" role="progressbar" style="width: 80%" aria-valuenow="80"
                                        aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr><br>
            {{/each}}
        </div>
    </div>
</section>