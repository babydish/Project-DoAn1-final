<div class="mt-4">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Tên</th>
                <th scope="col">Tên Khóa Học</th>
                <th scope="col">Kĩ Năng Đã Có</th>
                <th scope="col">Kĩ Năng Muốn Học</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>

                <th scope="row">{{this.name}}</th>
                <td>{{this.description}}</td>
                <td>{{this.skill}}</td>
                <td>{{this.skill_want_to_learn}}</td>
                <td>
                    <a href="/course/{{this._id}}/edit" class="btn btn-link">Sửa</a>
                    <a href="" class="btn btn-link" data-bs-id="{{this._id}}" data-bs-toggle="modal"
                        data-bs-target="#delete-course-modal">Xóa</a>
                </td>

            </tr>
            {{/each}}

        </tbody>
    </table>
</div>

{{!-- confirm delete --}}
<div id="delete-course-modal" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Course</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>You definitely want to delete this course</p>
            </div>
            <div class="modal-footer">
                <button type="button" id="btn-delete-course" class="btn btn-danger">Delete</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

{{!-- DELETE HIDDEN FORM --}}
<form name="delete-course-form" method="post"></form>

<script>
    var deleteCourseModel = document.getElementById('delete-course-modal')
    deleteCourseModel.addEventListener('show.bs.modal', function (event) {

        var courseID;
        // document.querySelector('form[name="delete-course-form"]') sẽ chọn phần tử <form> đầu tiên mà nó tìm thấy trong tài liệu HTML với thuộc tính name là "delete-course-form". Nếu không có phần tử nào phù hợp, nó sẽ trả về null.
        var deleteCourseForm = document.forms['delete-course-form'] // trả về một HTMLCollection của các phần tử form với cùng tên. 

        // Button that triggered the modal
        var button = event.relatedTarget;

        // Extract info from data-bs-* attributes
        var courseID = button.getAttribute('data-bs-id');

        var btnDeleteCourse = document.getElementById('btn-delete-course');
        btnDeleteCourse.onclick = function () {
            deleteCourseForm.action = '/course/' + courseID;
            deleteCourseForm.submit();


        }


    })
</script>